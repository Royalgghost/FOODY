{% extends 'admin/base.html.twig' %}

{% block title %}Orders Management{% endblock %}

{% block body %}
<div class="admin-layout">
    {% include 'admin/_sidebar.html.twig' %}
    
    <main class="admin-content">
        <div class="admin-header">
            <h1>Orders Management</h1>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="orders-container">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>#{{ order.id }}</td>
                                <td>{{ order.user.email }}</td>
                                <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td>â‚¬{{ order.total }}</td>
                                <td>
                                    <span class="status-badge status-{{ order.status|lower }}">
                                        {{ order.status }}
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="{{ path('admin_order_view', {id: order.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <form action="{{ path('admin_order_update_status', {id: order.id}) }}" method="POST" class="d-inline">
                                            <select name="status" onchange="this.form.submit()" class="form-select form-select-sm">
                                                <option value="">Update Status</option>
                                                <option value="PENDING" {% if order.status == 'PENDING' %}selected{% endif %}>Pending</option>
                                                <option value="COMPLETED" {% if order.status == 'COMPLETED' %}selected{% endif %}>Completed</option>
                                                <option value="CANCELLED" {% if order.status == 'CANCELLED' %}selected{% endif %}>Cancelled</option>
                                            </select>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No orders found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
{% endblock %}